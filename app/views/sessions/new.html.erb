<h2 class = "ui center aligned large header"> Welcome to chatroom  - <em>chat with your friends now! </em></h2>

<h4 class="ui center aligned medium icon header">
    <i class="circular red coffee icon"></i>
    Login to Continue
</h4>

<div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid ">
        <div class="column">
            <%=form_with url: login_path, method: "post", class: "ui form" do |form| %>
                <div class="field">
                    <%= form.label :username, "Username"%>
                    <div class="ui left icon input">
                        <%= form.text_field :username, placeholder: "username"%>
                        <i class="user icon"></i>
                    </div>
                </div>
                <div class="field">
                    <%= form.label :password, "Password"%>
                    <div class="ui left icon input">
                        <%= form.password_field :password%>
                        <i class="lock icon"></i>
                    </div>
                </div>
                <%= form.button "Login", class: "ui orange submit button" %>
            <%end%>
        </div>
        <div class="middle aligned column">
            <div class="ui big orange disabled button">
                <i class="signup icon"></i>
                Sign Up
            </div>
        </div>
    </div>
    <div class="ui vertical divider">
        Or
    </div>
</div>